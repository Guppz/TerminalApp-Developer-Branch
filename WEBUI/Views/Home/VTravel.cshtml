@using WEBUI.Models.Helpers;

<script src="~/Scripts/Views/VTravel.js"></script>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 id="tituloGestiones" class="col-4" data-step="1" data-intro="Bienvenido a la administración de viajes, en esta vista podrá crear, actualizar y eliminar viajes">Gestión de Viajes</h1>
<div class="col-3" data-step="2" data-intro="Seguidamente la funcionabilidad de  'crear viaje'  en esta sección podrá hacer la creación de los respectivos viajes que desee ">

    @Html.CtrlButton(viewName: "VTravel", id: "btnOpenModal", label: "Registrar Viaje", onClickFunction: "openModal")
    <a data-step="3" data-intro="Especialmente para la ayuda con respecto a la navegación de la página " class="btn btn-large btn-warning" href="javascript:void(0);" onclick="javascript:introJs().setOption('showProgress', true).start();">Guíame</a>
</div>
<div data-step="4" data-intro="Lista de todos los viajes registrados previamente en el sistema, que podrá gestionar de igual forma con solo presionar uno de los viajes en la lista">

    @Html.CtrlTable(viewName: "VTravel", id: "tblTravels", title: "Listado de Viajes",
                columnsTitle: "ID,Compañía,Ruta,Bus,Chofer,Día,Hora", ColumnsDataName: "IdTravel~Route.RouteCompany.Name~Route.Name~Bus.Plate~Bus.Driver.Name~Schedule.Day~Schedule.DepartHour", onSelectFunction: "bindFields")
</div>

<div class="col-1" data-step="5" data-intro="Gracias por cosultar la ayuda de la página, esperemos que sea de gran ayuda..."></div>


<div class="modal" tabindex="-1" role="dialog" id="myModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Enviar Queja</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="bs-component">
                            <form id="frmEdition">
                                @Html.CtrlInput(id: "txtPkIdTravel", type: "number", label: "Número de Viaje", columnDataName: "IdTravel")
                                @Html.CtrlComboBox(id: "companyComboBox", label: "Empresa Autobuses", idList: "Company", columnDataName: "Company")
                                @Html.CtrlComboBox(id: "routeComboBox", label: "Ruta", idList: "", columnDataName: "Route")
                                @Html.CtrlComboBox(id: "dayComboBox", label: "Día", idList: "Day", columnDataName: "Day")
                                @Html.CtrlComboBox(id: "busComboBox", label: "Autobus", idList: "", columnDataName: "Bus")
                                <p class="text-muted"><strong>Recuerde: </strong>La hora digitada debe coincidir con una de las horas previamente asignadas a la ruta en el registro de horarios</p>
                                @Html.CtrlInput(id: "departHour", type: "time", label: "Hora de Salida(24H)", columnDataName: "DepartHour")
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                @Html.CtrlButton(viewName: "VTravel", id: "btnCreate", label: "Registrar", onClickFunction: "create", buttonType: "success")
                @Html.CtrlButton(viewName: "VTravel", id: "btnUpdate", label: "Guardar Cambios", onClickFunction: "update", buttonType: "success")
                @Html.CtrlButton(viewName: "VTravel", id: "btnDelete", label: "Eliminar", onClickFunction: "SatatusAlertDesactive", buttonType: "danger")
            </div>
        </div>
    </div>
</div>
