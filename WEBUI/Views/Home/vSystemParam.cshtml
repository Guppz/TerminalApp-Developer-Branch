
@using WEBUI.Models.Helpers;

<script src="~/Scripts/Views/vSystemParam.js"></script>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 id="tituloGestiones" class="col-7" data-step="1" data-intro="Bienvenido a la administración de parámetros del sistema, en esta vista podrá crear, actualizar y eliminar parámetros.">Gestión de Parámetros del Sistema</h1>
<div class="col-4" data-step="2" data-intro="Seguidamente la funcionabilidad de  'crear parámetros del sistema', en esta sección podrá hacer la creación de los respectivas parámetros que desee ">

    @Html.CtrlButton(viewName: "vSystemParam", id: "btnOpenModal", label: "Crear Parámetro del Sistema", onClickFunction: "OpenModal")
    <a data-step="3" data-intro="Especialmente para la ayuda con respecto a la navegación de la página " class="btn btn-large btn-warning" href="javascript:void(0);" onclick="javascript:introJs().setOption('showProgress', true).start();">Guíame</a>

</div>
<div data-step="4" data-intro="Lista de todos los parámetros del sistema registrados previamente en el sistema, que podrá gestionar de igual forma con solo presionar uno de los parámetros de la lista">

    @Html.CtrlTable(viewName: "vSystemParam", id: "tblSystemParam", title: "Lista de Parámetros del Sistema",
                columnsTitle: "ID,Nombre,Valor", ColumnsDataName: "IdSystemParam~Name~Value", onSelectFunction: "BindFields")
</div>

<div class="col-1" data-step="5" data-intro="Gracias por cosultar la ayuda de la página, esperemos que sea de gran ayuda..."></div>

<div class="modal" tabindex="-1" role="dialog" id="modalSystemParam">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Parámetros del Sistema</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="bs-component">
                            <form id="fsEditSystemParam">
                                @Html.CtrlInput(id: "txtSystemParamId", type: "number", label: "ID del Parámetro", columnDataName: "IdSystemParam")
                                @Html.CtrlInput(id: "txtSystemParamName", type: "text", label: "Nombre del Parámetro", columnDataName: "Name")
                                @Html.CtrlComboBox(id: "paramTypeComboBox", label: "Tipo de Parámetro", idList: "ParamType", columnDataName: "ParamType")
                                @Html.CtrlInput(id: "txtSystemParamValue", type: "text", label: "Valor del Parámetro", columnDataName: "Value")
                            </form>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                @Html.CtrlButton(viewName: "vSystemParam", id: "btnCreate", label: "Crear", onClickFunction: "Create", buttonType: "success")
                @Html.CtrlButton(viewName: "vSystemParam", id: "btnUpdate", label: "Actualizar", onClickFunction: "Update", buttonType: "info")
                @Html.CtrlButton(viewName: "vSystemParam", id: "btnDelete", label: "Borrar", onClickFunction: "Delete", buttonType: "danger")
            </div>
        </div>
    </div>
</div>
