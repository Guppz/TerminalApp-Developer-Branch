

@using WEBUI.Models.Helpers;

<script src="~/Scripts/Views/vCardRecovery.js"></script>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 id="tituloGestiones" class="col-10" data-step="1" data-intro="Bienvenido a la administración de tarjetas, en esta vista podrá  recuperar tarjetas que han sido expedidas... ">Gestión y Recuperación de Tarjetas</h1>

<a data-step="2" data-intro="Especialmente para la ayuda con respecto a la navegación de la página " class="btn btn-large btn-warning" href="javascript:void(0);" onclick="javascript:introJs().setOption('showProgress', true).start();">Guíame</a>
<br /><br /><br />
<div data-step="3" data-intro="Listado, recuperación, re-expedición, o desactivación de Tarjetas">

    @Html.CtrlTable(viewName: "vCardRecovery", id: "tblCardRecovery", title: "Lista de Tarjetas",
            columnsTitle: "Terminal,Gin,Tipo Tarjeta,Estado,Saldo,Nombre,Apellido,Cedula", ColumnsDataName: "Terminal.Name~IdCard~CrType.CardName~StatusString~Balance~User.Name~User.LastName~User.Identification", onSelectFunction: "BindFields")
</div>

<div class="col-1" data-step="4" data-intro="Gracias por cosultar la ayuda de la página, esperemos que sea de gran ayuda..."></div>

<div class="modal" tabindex="-1" role="dialog" id="modalCardRecovery">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Recuperación  de Tarjeta</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="bs-component">
                            <form>
                                <fieldset id="fsCard">
                                    @Html.CtrlInput(id: "txtGIN", type: "text", label: "G.I.N.", columnDataName: "IdCard")
                                </fieldset>
                                <fieldset id="fsCardRecovery">
                                    <div class="form-group">
                                        <label for="selectRecoveryType">Tipo de Recuperación</label>
                                        <select id="selectRecoveryType" class="form-control">
                                            <option value="1">Tarjeta Defectuosa</option>
                                            <option value="2">Robo de Tarjeta</option>
                                            <option value="3">Extravio de Tarjeta</option>
                                        </select>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                @Html.CtrlButton(viewName: "vCardRecovery", id: "btnCancel", label: "Cancelar", onClickFunction: "Cancel", buttonType: "secondary")
                @Html.CtrlButton(viewName: "vCardRecovery", id: "btnDelete", label: "Desactivar", onClickFunction: "alertDeactivationStatus", buttonType: "danger")
                @Html.CtrlButton(viewName: "vCardRecovery", id: "btnReIssue", label: "Re-Expedir", onClickFunction: "alertReIssue", buttonType: "warning")
            </div>
        </div>
    </div>
</div>



