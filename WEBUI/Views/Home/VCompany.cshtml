@using WEBUI.Models.Helpers;

<script src="~/Scripts/Views/VCompany.js"></script>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 id="tituloGestiones" class="col-4" data-step="1" data-intro="Bienvenido a la administración de compañias, en esta vista podrá crear, actualizar y eliminar compañias. ">Gestión de Compañias</h1>
<div class="col-3" data-step="2" data-intro="Seguidamente la funcionabilidad de  'crear compañia', en esta sección podrá hacer la creación de las respectivas compañias que desee ">


    @Html.CtrlButton(viewName: "VCompany", id: "btnOpenModal", label: "Registrar Compañía", onClickFunction: "openModal")
    <a data-step="3" data-intro="Especialmente para la ayuda con respecto a la navegación de la página " class="btn btn-large btn-warning" href="javascript:void(0);" onclick="javascript:introJs().setOption('showProgress', true).start();">Guíame</a>

</div>
<div data-step="4" data-intro="Lista de todos las compañias registradas previamente en el sistema, que podrá gestionar de igual forma con solo presionar una  de ellas en la lista">

    @Html.CtrlTable(viewName: "VCompany", id: "tblCompanies", title: "Listado de Compañías", columnsTitle: "Cédula Jurídica,Nombre,Dueño, Email",
            ColumnsDataName: "CorpIdentification~Name~OwnerName~Email", onSelectFunction: "bindFields")
</div>

<div class="col-1" data-step="5" data-intro="Gracias por cosultar la ayuda de la página, esperemos que sea de gran ayuda..."></div>

<div class="modal" tabindex="-1" role="dialog" id="myModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Registrar Compañía</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="bs-component">
                            <form id="frmEdition">
                                @Html.CtrlInput(id: "txtCorpIdentification", type: "number", label: "Cédula Jurídica(sin (-))", columnDataName: "CorpIdentification")
                                @Html.CtrlInput(id: "txtOwnerName", type: "text", label: "Nombre Propietario", columnDataName: "OwnerName")
                                @Html.CtrlInput(id: "txtName", type: "text", label: "Nombre Empresa", columnDataName: "Name")
                                @Html.CtrlInput(id: "txtEmail", type: "email", label: "Correo Electrónico", columnDataName: "Email")
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                @Html.CtrlButton(viewName: "VCompany", id: "btnCreate", label: "Registrar", onClickFunction: "create", buttonType: "success")
                @Html.CtrlButton(viewName: "VCompany", id: "btnUpdate", label: "Actualizar", onClickFunction: "update", buttonType: "info")
                @Html.CtrlButton(viewName: "VCompany", id: "btnDelete", label: "Eliminar", onClickFunction: "SatatusAlertDesactive", buttonType: "danger")
            </div>
        </div>
    </div>
</div>


